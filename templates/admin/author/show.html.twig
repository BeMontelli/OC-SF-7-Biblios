{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
<div class="container mt-5 mb-4 pt-4">
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ author.dateOfBirth ? author.dateOfBirth|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfDeath</th>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ author.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('admin/author/_delete_form.html.twig') }}
</div>
{% endblock %}

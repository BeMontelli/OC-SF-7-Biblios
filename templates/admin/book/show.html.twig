{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<div class="container mt-5 mb-4 pt-4">
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ book.cover }}</td>
            </tr>
            <tr>
                <th>EditedAt</th>
                <td>{{ book.editedAt ? book.editedAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ book.plot }}</td>
            </tr>
            <tr>
                <th>PageNumber</th>
                <td>{{ book.pageNumber }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ book.status.name }}</td>
            </tr>
            <tr>
                <th>Editor</th>
                <td>{{  book.editor.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{  book.author.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

    {{ include('admin/book/_delete_form.html.twig') }}
</div>
{% endblock %}
